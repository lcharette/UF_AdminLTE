{% block stylesheets_page %}
    <!-- Fix select2 with this theme -->
    <style>
        .select2-selection--single { height: 34px !important; }
        .select2-container {
            width: 100% !important;
            padding: 0;
        }
    </style>
{% endblock %}

{% block scripts_page %}
    <script>
        $(function() {
            $('select').select2({
              minimumResultsForSearch: Infinity
            });
        });
    </script>
{% endblock %}
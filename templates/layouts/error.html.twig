{# This is the layout template for error pages.  Note that there is no navigation bar. #}
{% extends "layouts/AdminLTE.html.twig" %}

{% block body %}
    <body {% block body_attributes %}{% endblock %}>
        <!-- Main content -->
        <section class="content">
          <div class="error-page">
            {% block headline %}<h2 class="headline text-red"><i class="fa fa-terminal" aria-hidden="true"></i></h2>{% endblock %}

            <div class="error-content">
              <br /><h3>{% block heading %}<i class="fa fa-warning text-red"></i> Uhhh...something happened.  We don't know what.{% endblock %}</h3>

              {% block content %}
                  {% if messages %}<p>Here's what we got:</p>{% endif %}
                  {% for message in messages %}
                    <div class="alert alert-danger">{{ translate(message.message, message.parameters) }}</div>
                  {% endfor %}
                  <p class="lead">Click <a href="{{site.uri.public}}">here</a> to return to the front page.</p>
              {% endblock %}
            </div>
            <!-- /.error-content -->
          </div>
          <!-- /.error-page -->
        </section>
        <!-- /.content -->
    </body>
{% endblock %}